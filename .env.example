# Server
PORT=3000

# Database (required for API)
# Local Docker (run: docker compose up -d):
# DATABASE_URL=postgresql://postgres:local@localhost:5432/postgres
# Cloud (Render, Neon, Supabase):
DATABASE_URL=postgresql://user:password@host:5432/dbname

# JWT secret (set a strong value in production)
JWT_SECRET=your-secret-key

# Gemini API (for /ask endpoint)
GEMINI_API_KEY=your-gemini-api-key

# Seed script (optional)
# SEED_ADMIN_USERNAME=admin
# SEED_ADMIN_PASSWORD=admin123
